<!doctype html>
<html lang="en">
<head>

	<meta charset="utf-8">
	<!--[if IE]>
		<meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
	<![endif]-->
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="">
	<meta name="author" content="">
	
	<title>Fashion Shoppe Stores - Bootstrap 3 Template</title>
	
	<!-- Bootstrap Core CSS -->
	<link href="css/bootstrap.min.css" rel="stylesheet">
	
	<!-- Google Web Fonts -->
	<link href="http://fonts.googleapis.com/css?family=Roboto+Condensed:300italic,400italic,700italic,400,300,700" rel="stylesheet" type="text/css">
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
	
	<!-- CSS Files -->
	<link href="css/style.css" rel="stylesheet">
	<link href="css/responsive.css" rel="stylesheet">
	
	<!--[if lt IE 9]>
		<script src="js/ie8-responsive-file-warning.js"></script>
	<![endif]-->
	
	<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
	
	<!-- Fav and touch icons -->
	<link rel="apple-touch-icon-precomposed" sizes="144x144" href="assets/fav-144.png.html">
	<link rel="apple-touch-icon-precomposed" sizes="114x114" href="assets/fav-114.png.html">
	<link rel="apple-touch-icon-precomposed" sizes="72x72" href="assets/fav-72.png.html">
	<link rel="apple-touch-icon-precomposed" href="assets/fav-57.png.html">
	<link rel="shortcut icon" href="assets/fav.png.html">
	
</head>

<body>
<!-- Header Section Starts -->

<!-- Header Section Ends -->
<!-- Slider Section Starts -->
	<div class="slider">
		<div class="container">
			<div id="main-carousel" class="carousel slide" data-ride="carousel">
				<!-- Wrapper For Slides Starts -->
					<div class="carousel-inner">
						<div class="item active">
							<img src="assets/slider-imgs/slide1-img.jpg" alt="Slider" class="img-responsive" />
						</div>
						<div class="item">
							<img src="assets/slider-imgs/slide2-img.jpg" alt="Slider" class="img-responsive" />
						</div>
					</div>
				<!-- Wrapper For Slides Ends -->
				<!-- Controls Starts -->
					<a class="left carousel-control" href="index.html#main-carousel" role="button" data-slide="prev">
						<span class="glyphicon glyphicon-chevron-left"></span>
					</a>
					<a class="right carousel-control" href="index.html#main-carousel" role="button" data-slide="next">
						<span class="glyphicon glyphicon-chevron-right"></span>
					</a>
				<!-- Controls Ends -->t
			</div>				
		</div>
	</div>
<!-- Slider Section Ends -->
<!-- 3 Column Banners Starts -->
	<div class="col3-banners">
		<div class="container">
			<ul class="row list-unstyled">
				<li class="col-sm-4">
					<img src="assets/banners/3col-banner1.jpg" alt="banners" class="img-responsive" />
				</li>
				<li class="col-sm-4">
					<img src="assets/banners/free_delivery.png" alt="banners" class="img-responsive" />
				</li>
				<li class="col-sm-4">
					<img src="assets/banners/3col-banner3.jpg" alt="banners" class="img-responsive" />
				</li>
			</ul>
		</div>
	</div>
<!-- 3 Column Banners Ends -->
<!-- Latest Products Starts -->
	<section class="products-list">			
		<div class="container">
		<!-- Heading Starts -->
			<h2 class="product-head">Latest Products</h2>
		<!-- Heading Ends -->
		<!-- Products Row Starts -->
    
    <div class="row">
    	<% sorted = Product.all.sort_by &:created_at %>
    	
    	<% sorted.reverse.first(8).each do |product| %>
				<div class="col-md-3 col-sm-6">
					
					<div class="product-col">
						<div class="image">
							<img src= <%= product.pictures_url %> style = "width:320px; height:250px;" alt="product" class="img-responsive" />
						</div>
						<div class="caption">
							<h4> <%= link_to product.tittle, '/products/'+ product.id.to_s %> </h4>
							<div class="price">
								<span class="price-new">Rs <%= eval(product.features)[1] %></span>
								<% if !current_user.nil?   %>
								<button type="button"  class="btn btn-cart">
									<%= link_to 'Add to Cart', {:controller => "orders", :action => "create", :quantity => 1,:Ptype => eval(product.features)[0] ,:productID => product.id, :customerID => current_user.id } , {:method=>:post,:class=>"myclass" ,:style =>'background-color:transparent;color:black;text-decoration:none' }  %>
									
									<i class="fa fa-shopping-cart"></i> 
								</button>
								<%end%>
							</div>
						</div>
					</div>
					
				</div>
				<% end %>
      
	</div>
    
    </div>
		<!-- Products Row Ends -->
	</section>
<!-- Latest Products Ends -->
<!-- 2 Column Banners Starts -->
	<div class="col2-banners">
		<div class="container">
			<ul class="row list-unstyled">
				<li class="col-sm-8">
					<img src="assets/banners/2col-banner1.jpg" alt="banners" class="img-responsive" />
				</li>
				<li class="col-sm-4">
					<img src="assets/banners/2col-banner2.jpg" alt="banners" class="img-responsive" />
				</li>
			</ul>
		</div>
	</div>
<!-- 2 Column Banners Ends -->
<!-- Featured Products Starts -->
	<section class="products-list">			
		<div class="container">
		<!-- Heading Starts -->
			<h2 class="product-head">Featured Products</h2>
		<!-- Heading Ends -->
		<!-- Products Row Starts -->
			<div class="row">
			<!-- Product #1 Starts -->
	   <% sorted = Product.all.sort_by &:popularity %>
    	
    	<% sorted.reverse.first(4).each do |product| %>
				<div class="col-md-3 col-sm-6">
					
					<div class="product-col">
						<div class="image">
							<img src= <%= product.pictures_url %> style = "width:320px; height:250px;" alt="product" class="img-responsive" />
						</div>
						<div class="caption">
							<h4> <%= link_to product.tittle, '/products/'+ product.id.to_s %> </h4>
							<div class="price">
								<span class="price-new">Rs <%= eval(product.features)[1] %></span>
								<% if !current_user.nil?   %>
								<button type="button"  class="btn btn-cart">
									<%= link_to 'Add to Cart', {:controller => "orders", :action => "create", :quantity => 1,:Ptype => eval(product.features)[0] ,:productID => product.id, :customerID => current_user.id } , {:method=>:post,:class=>"myclass" ,:style =>'background-color:transparent;color:black;text-decoration:none' }  %>
									
									<i class="fa fa-shopping-cart"></i> 
								</button>
								<%end%>
							</div>
						</div>
					</div>
					
				</div>
				<% end %>
			</div>
		<!-- Products Row Ends -->
		</div>
	</section>
<!-- Featured Products Ends -->

<!-- Footer Section Ends -->
<!-- JavaScript Files -->
<script src="js/jquery-1.11.1.min.js"></script>
<script src="js/jquery-migrate-1.2.1.min.js"></script>	
<script src="js/bootstrap.min.js"></script>
<script src="js/bootstrap-hover-dropdown.min.js"></script>
<script src="js/jquery.magnific-popup.min.js"></script>
<script src="js/custom.js"></script>
</body>
</html>